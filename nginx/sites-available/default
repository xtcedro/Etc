##
# Updated Nginx configuration with enhancements for security, performance, and rate-limiting
##

# Default server configuration
server {
    server_name domingueztechsolutions.com www.domingueztechsolutions.com;

    # SSL configuration
    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/domingueztechsolutions.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/domingueztechsolutions.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    # Enhanced SSL security
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305';
    ssl_prefer_server_ciphers on;

    root /var/www/html;

    # Add index.php to the list if you are using PHP
    index index.php index.html index.htm index.nginx-debian.html;

    # PHP handling
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php8.1-fpm.sock; # Adjust PHP version if necessary
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # Serve static files with caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot|otf|webp|avif)$ {
        expires 6M;
        access_log off;
        add_header Cache-Control "public";
    }

    # Serve static files
    location / {
        try_files $uri $uri/ =404;
    }

    # Secure PHP directory
    location /assets/php/ {
        deny all; # Restrict direct access to PHP files
    }

    # Allow only contact-handler-form.php for POST requests with rate limiting
    limit_req_zone $binary_remote_addr zone=one:10m rate=5r/s; # Configure rate limit
    location /assets/php/contact_form_handler.php {
        limit_req zone=one burst=10; # Apply rate limiting
        access_log /var/log/nginx/contact_form.log; # Log access to this endpoint
        allow all;
        limit_except POST { deny all; } # Only allow POST requests
    }

    # Deny access to hidden files and sensitive directories
    location ~ /\. {
        deny all;
    }

    location ~* (\.git|\.svn|\.env|composer\.json|composer\.lock) {
        deny all;
    }

    # Deny access to .htaccess files
    location ~ /\.ht {
        deny all;
    }
}

# HTTP to HTTPS redirection
server {
    listen 80;
    listen [::]:80;

    server_name domingueztechsolutions.com www.domingueztechsolutions.com;
    return 301 https://$host$request_uri;
}

# Wildcard redirect for any other HTTP traffic
server {
    listen 80;
    listen [::]:80;

    server_name _;
    return 301 https://$host$request_uri;
}